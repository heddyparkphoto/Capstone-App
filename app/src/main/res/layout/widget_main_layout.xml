<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_muted"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/widget_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="64dp"
            android:src="@drawable/quantum_ic_refresh_white_24"
            />
        <TextView
        android:id="@+id/widget_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:contentDescription="@string/app_name"
        android:textColor="@color/wr_a200"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:textAppearanceSmall"
        android:textStyle="bold"
        android:layout_alignBottom="@id/widget_refresh"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="8dp"
        />

    </RelativeLayout>

    <ListView
        android:id="@+id/widget_id_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:loopViews="true"
        tools:listitem="@layout/widget_one_view"
        android:contentDescription="@string/a11y_post_widget"
        >

    </ListView>

</LinearLayout>