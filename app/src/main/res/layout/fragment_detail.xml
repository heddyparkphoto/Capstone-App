<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="6dp"
    >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_title_text"
            android:text="@string/post_title_temp"
            android:textSize="24sp"
            android:paddingTop="2dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:gravity="start"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:clickable="true"
            />

        <ImageButton
            android:id="@+id/media_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/playMedia"
            android:src="@drawable/ic_media_play"/>

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
        />


    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ListView
            android:id="@+id/listview_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <!-- empty list -->
        <TextView
            android:id="@+id/recyclerview_comments_empty"
            android:text="@string/noCommentDataText"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:visibility="invisible"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:layout_gravity="bottom"
        android:background="@color/wr_100"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/timeline"
            android:text="20 minutes ago"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/comments_num"
            android:text="5 comments"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/author_by"
            android:text="wannaauthor"
            />
    </LinearLayout>
    </FrameLayout>

    </LinearLayout>
